@model IEnumerable<Projeto>
@{
    ViewData["Title"] = "Lista de Projetos";
}

<div class="container mt-4">
    <h2 class="text-center">Lista de Projetos</h2>

    <!-- Formulário de Filtro -->
    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-3">
                <label for="id" class="form-label">Filtrar por ID:</label>
                <input type="number" name="id" id="id" class="form-control" placeholder="Digite o ID" />
            </div>
            <div class="col-md-3">
                <label for="descricao" class="form-label">Filtrar por Descrição:</label>
                <input type="text" name="descricao" id="descricao" class="form-control" placeholder="Digite a descrição" />
            </div>
            <div class="col-md-3 mt-4">
                <button type="submit" class="btn btn-primary mt-1">Filtrar</button>
            </div>
        </div>
    </form>

    <!-- Tabela de Projetos -->
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descrição</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center">Nenhum projeto encontrado.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Descricao</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mx-1">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info mx-1">
                                    <i class="bi bi-info-circle"></i> Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mx-1">
                                    <i class="bi bi-trash"></i> Deletar
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Novo Projeto
        </a>
        <a asp-action="GenerateRandomData" class="btn btn-info ml-2">
            <i class="bi bi-plus-circle"></i> Gerar Dados Aleatórios
        </a>
    </div>
</div>
