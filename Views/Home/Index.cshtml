@{
    ViewData["Title"] = "Home Page";
    // Verifica se a sessão de usuário está presente (usuário está logado)
    bool isUserLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserId"));
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao AppWeb2024</h1>
    @if (isUserLoggedIn)
    {
        <p>Explore as funcionalidades e aprenda a gerenciar Alunos, Funcionários, Matrículas e Projetos.</p>

        <!-- Bloco de Links com Imagens -->
        <div class="row justify-content-center mt-5">
            <!-- Alunos -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Index", "Aluno")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/009688/ffffff?text=Alunos" class="card-img-top" alt="Alunos">
                        <div class="card-body text-center">
                            <h5 class="card-title">Alunos</h5>
                            <p class="card-text">Gerenciar todos os alunos matriculados.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Funcionários -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Index", "Funcionario")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/3F51B5/ffffff?text=Funcionários" class="card-img-top" alt="Funcionários">
                        <div class="card-body text-center">
                            <h5 class="card-title">Funcionários</h5>
                            <p class="card-text">Gerenciar os dados dos funcionários.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Matrículas -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Index", "Matricula")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/FF5722/ffffff?text=Matrículas" class="card-img-top" alt="Matrículas">
                        <div class="card-body text-center">
                            <h5 class="card-title">Matrículas</h5>
                            <p class="card-text">Gerenciar as matrículas dos alunos nos projetos.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Projetos -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Index", "Projeto")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/2196F3/ffffff?text=Projetos" class="card-img-top" alt="Projetos">
                        <div class="card-body text-center">
                            <h5 class="card-title">Projetos</h5>
                            <p class="card-text">Visualizar e gerenciar os projetos disponíveis.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Nova Movimentação -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("NovaMovimentacao", "Movimentacao")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/4CAF50/ffffff?text=Movimentação" class="card-img-top" alt="Movimentação">
                        <div class="card-body text-center">
                            <h5 class="card-title">Movimentação</h5>
                            <p class="card-text">Registrar movimentações de estoque (entradas e saídas).</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Produtos -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Generate", "Produto")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/FF9800/ffffff?text=Produtos" class="card-img-top" alt="Produtos">
                        <div class="card-body text-center">
                            <h5 class="card-title">Produtos</h5>
                            <p class="card-text">Gerenciar produtos disponíveis no sistema.</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Resumo de Vendas -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("ResumoVendas", "CategoriaProduto")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/673AB7/ffffff?text=Resumo%20Vendas" class="card-img-top" alt="Resumo de Vendas">
                        <div class="card-body text-center">
                            <h5 class="card-title">Resumo de Vendas</h5>
                            <p class="card-text">Visualizar resumo das vendas por categoria.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Pivot Vendas por Ano -->
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("PivotVendasPorAno", "CategoriaProduto")" class="text-decoration-none">
                    <div class="card shadow-sm">
                        <img src="https://via.placeholder.com/150/00BCD4/ffffff?text=Pivot%20Vendas" class="card-img-top" alt="Pivot Vendas por Ano">
                        <div class="card-body text-center">
                            <h5 class="card-title">Pivot</h5>
                            <p class="card-text">Visualizar vendas por categoria e ano em formato de pivot.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
    else
    {
        <p class="text-danger">Por favor, faça login para acessar as funcionalidades do sistema.</p>
        <a href="@Url.Action("Login", "User")" class="btn btn-primary">Login</a>
    }
</div>
