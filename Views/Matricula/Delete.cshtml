@model Matricula
@{
    ViewData["Title"] = "Deletar Matrícula";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">Deletar Matrícula</h2>
    <div class="card mt-4 shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmar Exclusão</h4>
        </div>
        <div class="card-body">
            <h5>Tem certeza que deseja deletar esta matrícula?</h5>
            <dl class="row">
                <dt class="col-sm-3">ID da Matrícula</dt>
                <dd class="col-sm-9">@Model.MatriculaId</dd>

                <dt class="col-sm-3">ID do Aluno</dt>
                <dd class="col-sm-9">@Model.AlunoMatricula</dd>

                <dt class="col-sm-3">ID do Projeto</dt>
                <dd class="col-sm-9">@Model.ProjetoId</dd>

                <dt class="col-sm-3">Data da Matrícula</dt>
                <dd class="col-sm-9">@Model.DataMatricula.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="MatriculaId" />
                <button type="submit" class="btn btn-danger">Deletar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
